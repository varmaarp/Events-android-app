<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.arpit.sportit">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.MyEvents"
            android:label="@string/category_myEvents" />
        <activity
            android:name=".Activities.ViewAll"
            android:label="@string/category_viewAll" />
        <activity
            android:name=".Activities.Attending"
            android:label="@string/category_attending" />
        <activity android:name=".Activities.EventEditorActivity"
            android:label="@string/category_createEvent"/>
    </application>

</manifest>